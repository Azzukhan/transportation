# Application
APP_NAME=transportation-api
APP_ENV=development
API_V1_PREFIX=/api/v1
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite+aiosqlite:///./db.sqlite3

# Auth
SECRET_KEY=replace-with-a-long-random-secret
JWT_PREVIOUS_SECRET_KEYS=
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256
AUTH_RATE_LIMIT_WINDOW_SECONDS=60
AUTH_RATE_LIMIT_IP_MAX_ATTEMPTS=20
AUTH_RATE_LIMIT_USERNAME_MAX_ATTEMPTS=10
AUTH_LOCKOUT_THRESHOLD=5
AUTH_LOCKOUT_BASE_SECONDS=30
AUTH_LOCKOUT_MAX_SECONDS=900
RATE_LIMIT_BACKEND=memory
REDIS_URL=
REFRESH_TOKEN_EXPIRE_DAYS=14
AUTH_ACCESS_COOKIE_NAME=access_token
AUTH_REFRESH_COOKIE_NAME=refresh_token
AUTH_CSRF_COOKIE_NAME=csrf_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_DOMAIN=
SIGNATURE_ENCRYPTION_ENABLED=true
SIGNATURE_ENCRYPTION_KEYS=dev-v1:replace-with-base64-32-byte-key,dev-v2:replace-with-base64-32-byte-key
SIGNATURE_ACTIVE_KEY_ID=dev-v1
SIGNATURE_STARTUP_INTEGRITY_CHECK_ENABLED=true
SIGNATURE_STARTUP_INTEGRITY_FAIL_ON_INVALID=false
# Runtime
HOST=0.0.0.0
PORT=8000
WEB_CONCURRENCY=2
USE_GUNICORN=true
GUNICORN_TIMEOUT=120
GUNICORN_GRACEFUL_TIMEOUT=30
GUNICORN_KEEPALIVE=5

# Security / CORS
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173
SECURITY_CSP=default-src 'none'; frame-ancestors 'none'; base-uri 'none'; form-action 'none'
SECURITY_REFERRER_POLICY=no-referrer
SECURITY_HSTS_MAX_AGE=63072000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_GLOBAL_MAX_REQUESTS=300
RATE_LIMIT_AUTH_MAX_REQUESTS=30
RATE_LIMIT_UPLOAD_MAX_REQUESTS=20
RATE_LIMIT_EXPORT_MAX_REQUESTS=40
MAX_REQUEST_BODY_BYTES=1048576
MAX_AUTH_BODY_BYTES=16384
MAX_UPLOAD_BODY_BYTES=6291456
MAX_PUBLIC_REQUEST_BODY_BYTES=131072
# Security hardening (set for production)
SENSITIVE_EXPORT_STEP_UP_REQUIRED=false
SENSITIVE_EXPORT_STEP_UP_TOKEN=replace-with-strong-random-secret
AUDIT_HASH_KEY=replace-with-strong-random-secret
VITE_PUBLIC_TENANT_UUID=
VITE_SENSITIVE_EXPORT_STEP_UP_TOKEN=
